{
    "tasks": {
        "start": "deno run --allow-net --allow-env --allow-read --unstable-kv src/main.ts",
        "dev": "deno run --watch --allow-net --allow-env --allow-read --unstable-kv src/main.ts",
        "test": "deno test --allow-net --allow-env --allow-read --unstable-kv",
        "lint": "deno lint",
        "fmt": "deno fmt",
        "check": "deno check src/main.ts"
    },
    "imports": {
        "hono": "npm:hono@^4.0.0",
        "kysely": "npm:kysely@^0.27.2",
        "luxon": "npm:luxon@^3.4.4",
        "zod": "npm:zod@^3.22.4",
        "pg": "npm:pg@^8.11.3",
        "@std/assert": "jsr:@std/assert@1",
        "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
        "@std/ulid": "jsr:@std/ulid@1"
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 2,
        "singleQuote": true
    },
    "unstable": [
        "kv"
    ]
}